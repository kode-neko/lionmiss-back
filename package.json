{
  "name": "lionmiss-back",
  "version": "0.4.0",
  "description": "LionMiss back",
  "main": "index.js",
  "author": "Kode Neko",
  "license": "MIT",
  "scripts": {
    "docker": "docker compose up --detach",
    "docker:mongo": "docker compose --file ./docker-compose.mongo.yml up --detach",
    "undocker": "docker compose down",
    "undocker:mongo": "docker compose --file docker-compose.mongo.yml down",
    "start:rest": "node ./dist/rest/bundle.js",
    "start:gql": "node ./dist/gql/bundle.js",
    "start:gql:lib": "NODE_ENV=development node ./lib/src/graphql/index.js",
    "start:dev:rest": "NODE_ENV=development nodemon ./lib/src/rest/index.js",
    "start:dev:gql": "NODE_ENV=development nodemon ./lib/src/graphql/index.js",
    "lib": "npx tsc --project tsconfig.json",
    "lib:dev": "npx tsc --watch --project tsconfig.json",
    "dist": "npm run dist:rest && npm run dist:gql",
    "dist:rest": "npx webpack --config webpack.config.rest.js",
    "dist:gql": "npx webpack --config webpack.config.gql.js",
    "clean": "npm run clean:dist && npm run clean:lib",
    "clean:dist": "rm -rf ./dist",
    "clean:lib": "rm -rf ./lib"
  },
  "dependencies": {
    "@apollo/server": "^4.6.0",
    "@types/basic-auth": "^1.1.3",
    "@types/joi": "^17.2.3",
    "basic-auth": "^2.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "empty-lite": "^2.0.0",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "i18next": "^22.4.14",
    "i18next-http-middleware": "^3.3.0",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "lionmiss-core": "^0.5.2",
    "lodash": "^4.17.21",
    "mongodb": "^5.2.0",
    "mongoose": "^7.0.3",
    "nexus": "^1.3.0",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.6.2",
    "valid-request-joi": "^2.0.0",
    "xss-purge": "^1.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@jest/globals": "^29.5.0",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/faker": "^6.6.9",
    "@types/figlet": "^1.5.5",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.192",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.15.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "chalk": "^4.1.2",
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-config-airbnb": "^19.0.4",
    "figlet": "^1.5.2",
    "identity-obj-proxy": "^3.0.0",
    "inquirer": "^8.2.5",
